h1 NOTES

.row
  .small-8.columns
    h3 VIEW
    table#notes
      thead
        tr
          th
          th Title
          th Date Created
          th Tags
      tbody
        tr(ng-repeat='note in notes')
          td: button(ng-click='deleteNote(note.id, $index)') X
          td {{note.title}}
          td {{note.created_at}}
          td
            span.tag(ng-repeat='name in note.tag_names')
              a(href='/notes?tag={{name}}') {{name}}
  .small-4.columns
    h3 CREATE
    label(for='title') Title
    input(type='text', name='title', ng-model='note.title', placeholder='Title')
    label(for='note') Note
    textarea(name='note', ng-model='note.body')
    label(for='tags') Tags
    input(type='text', name='tags', ng-model='note.tags', placeholder='tag1,tag2,tag3')
    button.radius.success(ng-click='create(note)') Create
